<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tituloID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jamerson"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="agora mesmo" />

            <ImageView
                android:id="@+id/imagemID"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/imagem1" />

            <TextView
                android:id="@+id/descricaoID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Viajem legal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gosteiID"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_favorite_black_24dp"
                android:text="Gostei" />

            <Button
                android:id="@+id/comentarID"
                style="?attr/buttonBarButtonStyle"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
                android:text="Comentar" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>